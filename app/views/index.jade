    var bittersMap = (function () {
      var myLatlng = new google.maps.LatLng(40.6871843, -73.9867476),
          mapCenter = new google.maps.LatLng(40.6871843, -73.9867476),
          mapCanvas = document.getElementById('map_canvas'),
